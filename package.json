{
	"browserslist": [
		">= 1%",
		"last 1 major version",
		"not dead",
		"Chrome >= 45",
		"Firefox >= 38",
		"Edge >= 12",
		"Explorer >= 10",
		"iOS >= 9",
		"Safari >= 9",
		"Android >= 4.4",
		"Opera >= 30"
	],
	"scripts": {
		"build-css": "npx postcss 'build/package/**/css/!(*.min).css' --ext '.min.css' --base build/ --no-map -d build/",
		"build-js": "node .github/scripts/build-js.js",
		"build-templates": "node .github/scripts/build-templates.js",
		"build": "npm run build-css && npm run build-js && npm run build-templates",
		"build-dev": "npm run build && npm run lint-css",
		"lint-css": "npx stylelint '**/*.css' --fix"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.0",
		"cssnano": "^6.0.0",
		"glob": "^9.3.0",
		"postcss": "^8.4.4",
		"postcss-cli": "^10.0.0",
		"stylelint": "^15.2.0",
		"stylelint-order": "^6.0.2",
		"uglify-js": "^3.14.5"
	}
}
